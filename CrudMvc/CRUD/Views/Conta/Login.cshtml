@model CRUD.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Login</title>
</head>
<body>
    <div class="container">
        <div class="row-fluid">

            <section id="loginForm">
                @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horicontal" }))
            {
                    <div class="col-xs-4"></div>
                    <div class="col-xs-4">
                        <div class="form-login">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <h3>Efetue Login</h3>
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control input-lg", placeholder = "Seu usuário", @required = "required" })
                                @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">

                                @Html.PasswordFor(m => m.Senha, new { @class = "form-control input-lg", placeholder = "Sua senha", @required = "required" })
                                @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.CheckBoxFor(m => m.LembrarMe)
                                    @Html.LabelFor(m => m.LembrarMe)
                                </div>
                                <div class="col-md-6">
                                    @Html.ActionLink("Esquci minha senha", "EsqueciMinhaSenha", "Conta", null, new { @class = "right" })
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">
                                    <span class="glyphicon glyphicon-ok"></span>
                                    Acessar
                                </button>

                            </div>
                        </div>

                    </div>
                    <div class="col-xs-4"></div>
                }
            </section>

        </div>
    </div>
</body>


</html>
