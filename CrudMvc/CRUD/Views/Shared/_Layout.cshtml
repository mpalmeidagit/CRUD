<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CRUD</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container container_home">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("CRUD", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>

                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Cadastros
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Cliente", "CadastrarCliente", "Cliente")</li>
                                <li>@Html.ActionLink("Serviço", "CadastrarServico", "Servico")</li>
                                <li>@Html.ActionLink("Recibo", "CadastrarRecibo", "Recibo")</li>
                                <li class="nav-divider"></li>
                                <li>@Html.ActionLink("Usuário", "CadastrarUsuario", "Usuario")</li>
                                <li>@Html.ActionLink("Perfil", "CadastrarPerfil", "Perfil")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Consultas
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Cliente", "ConsultarCliente", "Cliente")</li>
                                <li>@Html.ActionLink("Serviço", "ConsultarServico", "Servico")</li>
                                <li>@Html.ActionLink("Recibo", "ConsultarRecibo", "Recibo")</li>
                                <li class="nav-divider"></li>
                                <li>@Html.ActionLink("Usuário", "ConsultarUsuario", "Usuario")</li>
                                <li>@Html.ActionLink("Perfil", "ConsultarPerfil", "Perfil")</li>
                            </ul>
                        </li>
                      
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Relatórios
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Recibo", "RelatorioRecibo", "Relatorio")</li>
                            </ul>
                        </li>
                    </ul>

                    @using (Html.BeginForm("LogOff", "Conta", FormMethod.Post, new { id = "logoffForm" }))
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    @User.Identity.Name
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Alteração de senha", "AlterarSenhaUsuario", "Conta")</li>
                                </ul>
                            </li>
                            <li><a href="javascript:document.getElementById('logoffForm').submit()">Sair</a></li>
                        </ul>
                    }

                </div>


            </div>
        </div>
    }
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Scripts/plugins/datatables/dataTables.bootstrap.js"></script>
   
    <script src="~/Scripts/plugins/sweetalert2/sweetalert2.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>