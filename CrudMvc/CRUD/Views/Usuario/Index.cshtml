@model List<CRUD.Models.UsuarioModel>

@{
    ViewBag.Title = "Cadastrar Usuario";

}
<style>
    #tbl_usuarios > thead > tr > th:nth-child(1) {
        width: 20%;
    }

    #tbl_usuarios > thead > tr > th:nth-child(2) {
        width: 20%;
    }

    #tbl_usuarios > thead > tr > th:nth-child(3) {
        width: 23%;
    }

    #tbl_usuarios > thead > tr > th:nth-child(4) {
        width: 23%;
    }

    #tbl_usuarios > thead > tr > th:nth-child(5) {
        text-align: center;
    }
</style>
<div class="container home conteudo_painel">
    <div class="panel panel-primary titulo_padrao">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body table-responsive">
            <table id="tbl_usuarios" class="table table-bordered table-hover">
                <thead>
                    <tr class="active">
                        <th>Login</th>
                        <th>Senha</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Login</td>
                            <td>@item.Senha</td>
                            <td>@item.Nome</td>
                            <td>@item.Email</td>
                            <td>
                                <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                                <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">

            <a id="btn_incluir" role="button" class="btn btn-success btn-lg btn-block"><span class="glyphicon glyphicon-ok"></span> Incluir Novo Usuário</a>
        </div>

    </div>
</div>
@section Scripts{

    <script type="text/javascript">

    </script>

    <script src="~/Scripts/Cadastro/usuario.js"></script>

}




